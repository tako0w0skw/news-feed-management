<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Sửa bài viết</h2>
        <div>
            <a href="/posts" class="btn btn-primary">Quay lại</a>
        </div>
    </div>
    <form action="/posts/edit/<%= posts.post_id %>" method="POST">
        <div class="mb-3">
            <label class="form-label">Mã bài viết</label>
            <input type="text" class="form-control" name="post_id" id="exampleInputCategoryName"
                value="<%= posts.post_id %>" readonly>
        </div>
        <div class="mb-3">
            <label class="form-label">Tiêu đề</label>
            <input type="text" name="title" class="form-control" placeholder="Nhập tiêu đề"
                value="<%= posts.title %>">
        </div>
        <div class="mb-3">
            <label class="form-label">Tóm tắt</label>
            <input type="text" name="subtitle" class="form-control" placeholder="Nhập tóm tắt"
                value="<%= posts.subtitle %>">
        </div>
        <div class="mb-3">
            <label class="form-label">Nội dung</label>
            <textarea name="editor1" id="editor1" rows="10" cols="80" class="form-control"
                placeholder="Nhập nội dung"><%= posts.post_content %></textarea>
        </div>
        <div class="mb-3">
            <label class="form-label">Hình ảnh</label>
            <input type="file" name="image_url" class="form-control" placeholder="Nhập hình ảnh"
                value="<%= posts.image_url %>">
        </div>
        <div class="mb-3">
            <label class="form-label">Danh mục</label>
            <select name="category_id" class="form-select" aria-label="Default select example">
                <% categories.forEach((item) => { %>
                <option value="<%= item.category_id %>" <% if (posts.category_id==item.category_id) { %> selected <% } %>>
                    <%= item.category_name %></option>
                <% }) %>
            </select>
        </div>
        <div class="mb-3">
            <label class="form-label">Trạng thái</label>
            <select name="status" class="form-select" aria-label="Default select example">
                <option value="1" <% if (posts.status==1) { %> selected <% } %>>Hiện</option>
                <option value="0" <% if (posts.status==0) { %> selected <% } %>>Ẩn</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Lưu</button>
        <script>
    // Replace the <textarea id="editor1"> with a CKEditor 4
    // instance, using default configuration.
    CKEDITOR.replace( 'editor1' );
</script>
    </form>
</div>