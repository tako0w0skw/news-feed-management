<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Quản lý liên hệ</h2>
        <% if (url=='/contacts/approved' ) { %>
            <div>
                <a href="/contacts" class="btn btn-primary">Quay lại</a>
            </div>
            <% } else { %>
                <div>
                    <a href="/contacts/approved" class="btn btn-primary">Danh sách các liên hệ đã duyệt</a>
                </div>
                <% } %>
    </div>

    <table class="table table-bordered table-hover text-center">
        <thead class="table-dark">
            <% if (url=='/contacts' ) { %>
                <tr>
                    <th>STT</th>
                    <th>Tên</th>
                    <th>Email</th>
                    <th>Số điện thoại</th>
                    <th>Tiêu đề</th>
                    <th>Nội dung</th>
                    <th>Duyệt</th>
                </tr>
                <% } else { %>
                    <tr>
                        <th>STT</th>
                        <th>Tên</th>
                        <th>Email</th>
                        <th>Số điện thoại</th>
                        <th>Tiêu đề</th>
                        <th>Nội dung</th>
                        <th>Trạng thái</th>
                    </tr>
                    <% } %>
        </thead>
        <tbody>
            <% if (url=='/contacts' ) { %>
                <% if (contacts && contacts.length> 0) { %>
                    <% contacts.forEach((item, index)=> { %>
                        <tr>
                            <td>
                                <%= index + 1 %>
                            </td>
                            <td>
                                <%= item.name %>
                            </td>
                            <td>
                                <%= item.email %>
                            </td>
                            <td>
                                <%= item.phone %>
                            </td>
                            <td>
                                <%= item.subject %>
                            </td>
                            <td>
                                <%= item.message %>
                            </td>
                            <td>
                                <a href="/contact/approve/<%= item.contact_id %>" class="btn btn-info text-white"><i
                                        class="fas fa-check"></i></a>
                            </td>
                        </tr>
                <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="7">Không có dữ liệu</td>
                    </tr>
                <% } %>
            <% } else { %>
                <% if (contacts && contacts.length> 0) { %>
                    <% contacts.forEach((item, index)=> { %>
                        <tr>
                            <td>
                                <%= index + 1 %>
                            </td>
                            <td>
                                <%= item.name %>
                            </td>
                            <td>
                                <%= item.email %>
                            </td>
                            <td>
                                <%= item.phone %>
                            </td>
                            <td>
                                <%= item.subject %>
                            </td>
                            <td>
                                <%= item.message %>
                            </td>
                            <td>Đã duyệt</td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="7">Không có dữ liệu</td>
                    </tr>
                <% } %>
            <% } %>
        </tbody>
    </table>
</div>