<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Thêm danh mục</h2>
        <div>
            <a href="/categories" class="btn btn-primary">Quay lại</a>
        </div>
    </div>
    <form action="/categories/add/" method="POST">
        <div class="mb-3">
            <label class="form-label">Mã danh mục</label>
            <input type="text" class="form-control" name="category_id" id="exampleInputCategoryName"
                value="<%= categories.category_id + 1 %>" readonly>
        </div>
        <div class="mb-3">
            <label class="form-label">Tên danh mục</label>
            <input type="text" name="category_name" class="form-control" placeholder="Nhập tên danh mục">
        </div>
        <div class="mb-3">
            <label class="form-label">Trạng thái</label>
            <select name="status" class="form-select" aria-label="Default select example">
                <option value="1" selected >Hiện</option>
                <option value="0">Ẩn</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Lưu</button>
    </form>
</div>