<div class="container-fluid">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Quản lý người dùng</h2>
    <div>
      <a href="/users/add/" class="btn btn-primary">Thêm</a>
    </div>
  </div>

  <table class="table table-bordered table-hover text-center">
    <thead class="table-dark">
      <tr>
        <th>Họ tên</th>
        <th>Username</th>
        <th>Email</th>
        <th>Vai trò</th>
        <th>Xóa</th>
        <th>Sửa</th>
        <th>Reset mật khẩu</th>
      </tr>
    </thead>
    <tbody>
      <% if (data.users && data.users.length> 0) { %>
        <% data.users.forEach((item, index)=> { %>
          <tr>
            <td>
              <%= item.full_name %>
            </td>
            <td>
              <%= item.username %>
            </td>
            <td>
              <%= item.email %>
            </td>
            <td>
              <%= item.role %>
            </td>
            <td>
              <form action="/users/delete/<%= item.user_id %>" method="POST"
                onsubmit="return confirm('Bạn có chắc muốn xoá?')">
                <button class="btn btn-danger"><i class="fas fa-trash"></i></button>
              </form>
            </td>
            <td>
              <a href="/users/edit/<%= item.user_id %>" class="btn btn-warning text-white"><i
                  class="fas fa-edit"></i></a>
            </td>
            <td>
              <form action="/users/reset/<%= item.user_id %>" method="POST"
                onsubmit="return confirm('Bạn có chắc muốn reset lại mật khẩu?')">
                <button class="btn btn-info text-white"><i class="fas fa-key"></i></button>
              </form>
            </td>
          </tr>
          <% }) %>
            <% } else { %>
              <tr>
                <td colspan="5">Không có dữ liệu</td>
              </tr>
              <% } %>
    </tbody>
  </table>
</div>